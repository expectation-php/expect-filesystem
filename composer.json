{
    "name": "expect/expect-filesystem",
    "description": "File sytem matcher for expect",
    "keywords": [
        "expect", "assert", "test", "spec", "bdd", "file", "directory"
    ],
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "expect/expect": "~0.4"
    },
    "require-dev": {
        "peridot-php/peridot": "~1.15",
        "peridot-php/peridot-dot-reporter": "~1.0",
        "beberlei/assert": "~2.3",
        "phpspec/prophecy": "~1.3",
        "cloak/peridot-cloak-plugin": "~1.2",
        "cloak/robo-coveralls-kit": "~1.0",
        "robo-peridot/robo-peridot": "~1.0",
        "codegyre/robo": "~0.5",
        "holyshared/peridot-temporary-plugin": "~0.1"
    },
    "autoload": {
        "psr-4": {
            "expect\\filesystem\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/robo spec:all",
        "coveralls": "vendor/bin/robo coveralls:upload",
        "fixer": "php-cs-fixer fix src --config-file"
    },
    "minimum-stability": "stable"
}
